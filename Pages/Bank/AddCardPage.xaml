<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cloud_app_dev_exam_project.Pages.Bank.AddCardPage"
             Title="AddCardPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry x:Name="BankNameEntry" Placeholder="Bank Name" />
            <Entry x:Name="CardNumberEntry" Placeholder="Card Number" Keyboard="Numeric" />
            <Entry x:Name="ExpiryEntry" Placeholder="Expiration Date (MM/YY)" />
            <Entry x:Name="CVVEntry" Placeholder="CVV" Keyboard="Numeric" IsPassword="True" />
            <Entry x:Name="OwnerNameEntry" Placeholder="Owner Name" />
            <Entry x:Name="InitialAmountEntry" Placeholder="Initial Amount" Keyboard="Numeric" />

            <Button Text="Add Card" Clicked="OnAddCardSubmit" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>