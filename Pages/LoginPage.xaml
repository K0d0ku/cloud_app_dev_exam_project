<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cloud_app_dev_exam_project.Pages.LoginPage"
             Title="Login Page">
    
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Email" />
        <Entry x:Name="EmailEntry" Placeholder="Enter your email" Keyboard="Email" />

        <Label Text="Password" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" />

        <Label Text="Don't have an account?" HorizontalOptions="Center"/>
        <Button Text="Register Now" Clicked="OnRegisterButtonClicked" />

    </VerticalStackLayout>
</ContentPage>